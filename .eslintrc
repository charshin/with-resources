{
  "plugins": ["react"],
  "extends": ["airbnb-base"],
  "rules": {
    "no-unused-expressions": ["error", { "allowShortCircuit": true, "allowTernary": true }],
    "class-methods-use-this": [
      "error",
      { "exceptMethods": ["componentWillReceiveProps", "shouldComponentUpdate", "render"] }
    ]
  }
}
